<h1><%= @article.id ? '記事修正' : '新着記事' %></h1>

<%# エラーメッセージ %>
<%= render 'error_message', errors: @article.errors %>

<%= form_for @article do |f| %>
  <%= f.text_field :subject %>
  <%= f.text_area :body %>
  <%= f.check_box :published_status %>
  <%= f.submit @article.id ? '記事を修正する' : '記事を作成する' %>
<% end %>