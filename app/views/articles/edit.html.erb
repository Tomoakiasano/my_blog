<h1>記事更新</h1>
<% if @article.errors %>
  <%= render 'error_message', error_messages: @article.errors %>
<% end %>
<%= form_for @article do |f| %>
  <%= f.text_field :subject %>
  <%= f.text_area :body %>
  <%= f.submit '記事を修正する' %>
<% end %>
<%= link_to '記事一覧へ戻る', articles_path %>
<% if @article.published? %>
  <%= link_to '非公開にする', article_unpublished_path(@article), method: :patch %>
<% else %>
  <%= link_to '公開する', article_published_path(@article), method: :patch %>
<% end %>